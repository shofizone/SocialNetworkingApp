<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical"
    android:paddingBottom="5dp"


    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="18dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/registration_scrollview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/signupActivityLogo"
                    android:layout_width="140dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/ic_logo" />

                <TextView
                    android:id="@+id/tv_create_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Create Account"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="26sp" />

                <EditText
                    android:id="@+id/registration_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="50dp"

                    android:background="#00ffffff"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:fontFamily="@font/oxygen"
                    android:hint="Username"
                    android:inputType="textEmailAddress"

                    android:maxLines="1"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColorHint="#ff555555" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryDark" />

                <EditText
                    android:id="@+id/registration_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:background="#00ffffff"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:fontFamily="@font/oxygen"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"

                    android:padding="8dp"

                    android:textColorHint="#ff555555" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryDark" />




                <EditText
                    android:id="@+id/registration_Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:background="#00ffffff"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:fontFamily="@font/oxygen"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLines="1"

                    android:padding="8dp"
                    android:textColorHint="#ff555555" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/registration_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="24dp"
                    android:background="@drawable/button_background"
                    android:fontFamily="@font/oxygen"
                    android:text="Sing Up"
                    android:textColor="#fff"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/already_have_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="20dp"
                    android:text="Already have an account? Login" />

                <!--<ProgressBar-->
                    <!--android:id="@+id/registration_progressBar"-->
                    <!--style="?android:attr/progressBarStyle"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerHorizontal="false"-->
                    <!--android:layout_centerVertical="false" />-->

                <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"

                    app:SpinKit_Color="@color/colorPrimaryDark"
                    style="@style/SpinKitView.Large.Circle"
                    android:id="@+id/registration_progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="false"
                    android:layout_centerVertical="false"
                    />

                <TextView
                    android:id="@+id/registration_please_wait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/registration_progressBar"
                    android:layout_centerHorizontal="false"
                    android:layout_centerVertical="false"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"

                    android:text="Please Wait"
                    android:textColor="#ff000000" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>