<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="social.shofizone.com.networking">
   <uses-permission android:name="android.permission.INTERNET"/>
   <uses-permission android:name="android.permission.CAMERA"/>
   <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
   <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="social.shofizone.com.networking.home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="social.shofizone.com.networking.search.SearchActivity"/>
        <activity android:name="social.shofizone.com.networking.share.ShareActivity" android:windowSoftInputMode="adjustNothing"/>
        <activity android:name="social.shofizone.com.networking.share.NextActivity"/>
        <activity android:name="social.shofizone.com.networking.message.MessageActivity"/>
        <activity android:name="social.shofizone.com.networking.profile.ProfileActivity"/>
        <activity android:name="social.shofizone.com.networking.profile.AccountSettingActivity"/>
        <activity android:name="social.shofizone.com.networking.register.ActivityLogin"/>
        <activity android:name="social.shofizone.com.networking.register.ActivityRegister"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>